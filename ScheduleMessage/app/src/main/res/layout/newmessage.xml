<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:weightSum="100"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:orientation="horizontal"
            android:id="@+id/layout_To"
            android:layout_margin="10dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="To:"
                android:id="@+id/editTextto"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:orientation="horizontal"
            android:id="@+id/layout_message"
            android:layout_below="@id/layout_To"
            android:layout_margin="10dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Message:"
                android:id="@+id/editTextmessage"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="35"
            android:orientation="horizontal"
            android:id="@+id/layout_addimage"
            android:layout_below="@id/layout_message"
            android:layout_margin="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/textViewaddimage"
                android:text="Add Image to your message"
                android:clickable="true"
                />

        </LinearLayout>
        <!--LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:orientation="horizontal"
            android:id="@+id/layout_datentime"
            android:layout_below="@id/layout_addimage"
            android:layout_margin="10dp"
            android:weightSum="100"
            >

            <fragment
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="wrap_content"
                android:name="com.example.ratulaggarwal.schedulemessage.DatePickerFragment"
                android:id="@+id/datepicker_fragment"
                tools:layout="@layout/datepickerfragment" />

            <fragment
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="wrap_content"
                android:name="com.example.ratulaggarwal.schedulemessage.TimePickerFragment"
                android:id="@+id/timepicker_fragment"
                tools:layout="@layout/timepickerfragment" />

        </LinearLayout-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:id="@+id/layout_savebutton"
        android:layout_margin="10dp"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Save / Send"
            android:id="@+id/buttonsave"
            />

    </LinearLayout>


</LinearLayout>